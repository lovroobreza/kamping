<% layout('layouts/boilerplate') %>

<div class="card m-auto mb-5" style="width: 80%">
  <img src="<%= campground.image %>" class="card-img-top" alt="camp image" />
  <div class="card-body">
    <h5 class="card-title"><%= campground.title %></h5>
    <p class="card-text"><%= campground.description %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item text-center">
      <small class="text-muted"><%= campground.location %></small>
    </li>
    <li class="list-group-item text-center">
      <%= campground.price %>â‚¬ / night
    </li>
  </ul>
  <div class="card-body d-flex justify-content-center align-items-center">
    <a class="btn btn-success" href="/campgrounds/<%= campground._id%>/edit"
      >Edit the camp</a
    >

    <form
      action="/campgrounds/<%= campground._id %>?_method=DELETE"
      method="POST"
    >
      <button class="btn btn-danger ms-5">delete the camp</button>
    </form>
  </div>
  <div class="card-footer text-muted text-center">3 days ago</div>
</div>
